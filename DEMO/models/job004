$WALLFAST << EOD
$TEMP
$MDOTSTAR
$MSTAR $TSTAR $RSTAR
$MUI
$silab $grafab $iceab
$DISTANCIA
$ALTINH
$TAUMAXL
$WLFILE
$ESCRIBIR
$FILEWALLSED
$FILERIN
$LONG1
$FILESILWALL
$FILEORGWALL
$FILEICEWALL
EOD

ls $FILERIN

endif
#end wall at inner disk edge calculation--------------

#recover RIN from wall calculation
set RIN=`cat $FILERIN`
echo RIN $RIN >> $LOGFILE
echo RIN $RIN 

